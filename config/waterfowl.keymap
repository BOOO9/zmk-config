/*
0. Layer: _NEOBASE 		// Base Layer mit NEO
1. Layer: _SYMBOLES 	// Symbole
2. Layer: _NAV_NUM 		// Navigation & Number Blocks
3. Layer: _FNCTS        // FN Keys & Mouse Keys
4. Layer: _EXTRAS       // Extra Symbols and Keys 

*/



#define   NEO           0 
#define   SYMBOLS       1
#define   NAV_NUM       2
#define   FNCTS         3
#define   EXTRAS        4



/ {
    macros {

        EURO: EURO {
                label = "EURO";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N0 &kp KP_N1 &kp KP_N2 &kp KP_N8>
                        , <&macro_release &kp LALT>
                        ;
        };
        
        SQBRCT_OP: SQBRCT_OP {
                label = "SQBRCT_OP";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N9 &kp KP_N1>
                        , <&macro_release &kp LALT>
                        ;
        };
        
        SQBRCT_CL: SQBRCT_CL {
                label = "SQBRCT_CL";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N9 &kp KP_N3>
                        , <&macro_release &kp LALT>
                        ;
        };


        
        CRBRCT_OP: CRBRCT_OP {
                label = "CRBRCT_OP";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N1 &kp KP_N2 &kp KP_N3>
                        , <&macro_release &kp LALT>
                        ;
        };
        
        CRBRCT_CL: CRBRCT_CL {
                label = "CRBRCT_CL";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N1 &kp KP_N2 &kp KP_N5>
                        , <&macro_release &kp LALT>
                        ;
        };
        
        BKSLASH: BKSLASH {
                label = "BKSLASH";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                        = <&macro_press &kp LALT>
                        , <&macro_tap &kp KP_N9 &kp KP_N2>
                        , <&macro_release &kp LALT>
                        ;
        };
